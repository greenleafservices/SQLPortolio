

<%= form_for(@portfolio_item) do |f| %>
<div class="row"> <!-- Row inside form - allows form to spread over columns -->
  <div class="col-md-6">
    <h2>Activity</h2>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class:'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <h2>Technologies</h2>
    <p></p>

    <ul>
      <%= f.fields_for :technologies do |technology_form| %>
        <li class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class:'form-control' %>
        </li>
      <% end %>
    </ul>

    <div class="form-group">
      <%= f.submit "Write Record", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>
<% end %>
