<div class="container">
  <div class="row  portfolio-form">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <b><%= @portfolio_item.subtitle %></b>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <% if @portfolio_item.technologies.count > 0 %>
        <h3>Technologies Used:</h3>
        <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
        <% end %>
      <% end %>
      <%= link_to 'Edit', edit_portfolio_path(@portfolio_item.id) if logged_in?(:site_admin) %>
      <%= link_to 'Delete', portfolio_path(@portfolio_item.id), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
      <%= link_to "View all", portfolios_path %> &nbsp <a href="#">Back to top</a>
    </div>
  </div> <!-- end of row -->
</div> <!-- end of container -->
